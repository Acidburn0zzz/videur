{
    "service": {
        "location": "http://127.0.0.1:8282",
        "version": "1.1",
        "resources": {
                "/dashboard": {
                  "GET": {}
                },
                "/action": {
                 "GET": {
                    "parameters": {
                        "actionid": "[0-9]{1,20}"
                    }}
                },
                "/command": {
                 "GET": {
                    "parameters": {
                        "commandid": "[0-9]{1,20}"
                    }}
                },
                "/search": {
                 "GET": {
                    "parameters": {
                        "before": "rfc3339date",
                        "after": "([0-9]{4})-([0-9]{2})-([0-9]{2})([Tt]([0-9]{2}):([0-9]{2}):([0-9]{2})(\\.[0-9]+)?)?(([Zz]|([+-])([0-9]{2}):([0-9]{2})))?/",
                        "type": "(action|command|agent)",
                        "report": "[a-zA-Z0-9]{1,64}",
                        "agentname": "[\\w\\n\\r\\t ]{0,256}$",
                        "actionname": "[\\w\\n\\r\\t ]{0,1024}$",
                        "status": "[a-zA-Z0-9]{1,64}",
                        "threatfamily": "[a-zA-Z0-9]{1,64}",
                        "limit": "[0-9]{1,20}"
                    }}
                }
            ,
                "/action/create": {
                 "POST": {
                    "limits": {
                        "request_rate": "1/s/ip",
                        "max_req_size": "10kB"
                    }}
                }
        },
        "description": {
            "owner": "Mozilla Operations Security",
            "developer": "Julien Vehent <jvehent@mozilla.com>",
            "operator": "Julien Vehent <jvehent@mozilla.com>"
        },
        "configuration": {
            "authentication": "fxa assertion",
            "tls": {
                "require_backward_compatibility": false,
                "ocsp_stapling": {
                    "enabled": true,
                    "must-staple": 7776000
                },
                "hsts": {
                    "enabled": true,
                    "max-age": 15768000
                }
            },
            "content security policy": {
                "enabled": true,
                "Content-Security-Policy": "default-src 'none'; style-src cdn.example.com; report-uri /_/csp-reports"
            },
            "limits": {
                "request_rate": "10/s/ip",
                "bandwidth_rate": "5kB/s/conn",
                "max_req_size": "500B",
                "permitted_origins": [
                    "france",
                    "usa",
                    "uk"
                ],
                "ip whitelist": [],
                "ip blacklist": []
            },
            "logging": {
                "location": "amqps://mozdef.mozilla.org/mig/"
            }
        }
    }
}
